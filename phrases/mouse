# I recommend https://git.sr.ht/~geb/coord for clicking points on the screen.


# Click
index:click left

# Scroll
explicate:click scrollup
implicate:click scrolldown

# Center the cursor in the active window
center:eval printf 'mouseto '; xdotool getactivewindow getwindowgeometry | awk '{sub(/[,x]/, " ")}; NR==2 {x=$2;y=$3}; NR==3 {print x+($2)/2, y+($3)/2}'
